 # scale_x_continuous(breaks=arithSeq(-5000,5000))

arithSeq <- function(base, max){
  i <- base
  aux <- base
  while (i < (max)){
    i <-i + 43.5
    aux <- c(aux,i)
  }
  return(aux)
}


