dist <- distanceToNearest(makeGRangesFromDataFrame(aux),makeGRangesFromDataFrame(LaminB1))
dist <- as.data.frame(dist)
dim(dist)
dist <- (dist[dist$distance < 1000001,])
tail(names(sort(table(dist$subjectHits))), 1) ##index: 55 .. 29 genes
