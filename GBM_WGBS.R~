  if(is.null(teste)){
    teste <- cbind(i,nrow(a),mean(a[,"percentMeth.60"]))
  }
  else{
    teste <- rbind(teste, cbind(i,nrow(a),mean(a[,"percentMeth.60"])))
  }
  i<-i-40
}

