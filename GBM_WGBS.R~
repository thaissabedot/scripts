dat2 <- DataTrack(subsetByOverlaps(all.rd,gr),name="Number of Reads",col=c("darkgreen","firebrick","firebrick"),groups=c("0128 (GCIMP low)","1460 (GCIMP high)","1788 (GCIMP high)"),type="smooth")

